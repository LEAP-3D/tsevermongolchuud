generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(nanoid())
  email     String   @unique
  name      String?
  password  String?
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  children  Child[]
}

model Class {
  id        String   @id @default(nanoid())
  email     String   @unique
  name      String?
  password  String?
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
}

model Child {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int?
  gender    String?
  pin       String
  parentId  String?
  parent    User?    @relation(fields: [parentId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ClerkUser {
  id        String   @id @default(nanoid())
  clerkId   String   @unique
  email     String?
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
