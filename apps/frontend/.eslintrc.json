{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["@typescript-eslint", "unused-imports"],
  "rules": {
    /* --- STRICT RULES --- */

    /* Error on unused imports */
    "unused-imports/no-unused-imports": "error",

    /* Error on unused variables (including state) */
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    /* --- OVERRIDES & DISABLES --- */

    /* Prevent false positives from base rule */
    "no-unused-vars": "off",

    /* Allows you to use characters like ' and " directly in JSX.
       Note: Backticks (`) still require {" "} wrapping due to JS syntax. 
    */
    "react/no-unescaped-entities": "off"
  }
}
